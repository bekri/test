# Allow access to script.js only if the Referrer header is set to specific files
RewriteEngine On
RewriteCond %{HTTP_REFERER} !^$ # Allow empty referrer (direct access by allowed files)
RewriteCond %{HTTP_REFERER} !/index\.html$ [NC]
# Add additional RewriteCond lines for other files if needed
RewriteRule ^script\.js$ - [F]
